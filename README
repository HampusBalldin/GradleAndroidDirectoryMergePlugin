│       │   └── resources
│       │       └── META-INF
│       │           └── gradle-plugins
│       │               └── org.hampus.android.packaging.properties
│       └── test
│           └── groovy
│               └── org
│                   └── gradle
│                       └── FileUtilsTest.groovy
├── README
├── repo
│   └── org
│       └── hampus
│           └── android
│               └── packaging
│                   └── hampusPlugin
│                       ├── 1.0-SNAPSHOT
